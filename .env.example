# ===================================================================
# Digital by Jeff - Restaurant POS System
# Environment Configuration
# ===================================================================

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=jwg_resto
DB_USER=root
DB_PASS=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=86400

# Application Configuration
APP_NAME="Digital by Jeff - Restaurant POS"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Restaurant Information
RESTAURANT_NAME="Your Restaurant Name"
RESTAURANT_ADDRESS="Jl. Example No. 123"
RESTAURANT_PHONE="021-1234567"
RESTAURANT_EMAIL="info@restaurant.com"

# Tax & Service Charge
TAX_PERCENTAGE=10
SERVICE_CHARGE_PERCENTAGE=5

# Payment Gateway (QRIS / Midtrans)
PAYMENT_GATEWAY=midtrans
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false

# QRIS Configuration (if using direct QRIS)
QRIS_MERCHANT_ID=your-qris-merchant-id
QRIS_MERCHANT_NAME="Your Restaurant"
QRIS_API_KEY=your-qris-api-key

# Email Configuration (for notifications)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@restaurant.com
MAIL_FROM_NAME="Restaurant POS"

# SMS Configuration (optional)
SMS_PROVIDER=twilio
TWILIO_SID=your-twilio-sid
TWILIO_TOKEN=your-twilio-token
TWILIO_FROM=+1234567890

# WhatsApp Business API (optional)
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Firebase Cloud Messaging (for push notifications)
FCM_SERVER_KEY=your-fcm-server-key

# Timezone
TIMEZONE=Asia/Jakarta

# Session Configuration
SESSION_LIFETIME=120
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=false

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# Inventory
AUTO_DEDUCT_INVENTORY=true
LOW_STOCK_ALERT=true
LOW_STOCK_THRESHOLD=10

# Features
ENABLE_QR_ORDERING=true
ENABLE_ONLINE_PAYMENT=true
ENABLE_SPLIT_BILL=true
ENABLE_DISCOUNT_CODE=true
ENABLE_LOYALTY_PROGRAM=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=/backups
BACKUP_SCHEDULE=daily

# Logging
LOG_LEVEL=debug
LOG_PATH=/logs

# Railway Specific (for deployment)
# Railway will automatically set DATABASE_URL
# DATABASE_URL=mysql://user:pass@host:port/dbname

# Cloudflare (if using CDN)
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=
